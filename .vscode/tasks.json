{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "func",
			"label": "func: host start",
			"command": "host start",
			"problemMatcher": "$func-node-watch",
			"isBackground": true,
			"dependsOn": "npm watch (functions)",
			"options": {
				"cwd": "${workspaceFolder}/apps\\tools"
			}
		},
		{
			"type": "shell",
			"label": "npm build (functions)",
			"command": "npm run build",
			"dependsOn": "npm clean (functions)",
			"problemMatcher": "$tsc",
			"options": {
				"cwd": "${workspaceFolder}/apps\\tools"
			}
		},
		{
			"type": "shell",
			"label": "npm watch (functions)",
			"command": "npm run watch",
			"dependsOn": "npm clean (functions)",
			"problemMatcher": "$tsc-watch",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/apps\\tools"
			}
		},
		{
			"type": "shell",
			"label": "npm install (functions)",
			"command": "npm install",
			"options": {
				"cwd": "${workspaceFolder}/apps\\tools"
			}
		},
		{
			"type": "shell",
			"label": "npm prune (functions)",
			"command": "npm prune --production",
			"dependsOn": "npm build (functions)",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/apps\\tools"
			}
		},
		{
			"type": "shell",
			"label": "npm clean (functions)",
			"command": "npm run clean",
			"dependsOn": "npm install (functions)",
			"options": {
				"cwd": "${workspaceFolder}/apps\\tools"
			}
		},
		{
			"label": "Run API Dev",
			"type": "shell",
			"command": "pnpm dev",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "GNO Dev Server",
			"type": "shell",
			"command": "pnpm dev",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "GNO Dev",
			"type": "shell",
			"command": "pnpm dev",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "GNO Development",
			"type": "shell",
			"command": "pnpm dev",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "GNO Mock Mode",
			"type": "shell",
			"command": "set USE_FOUNDRY_AGENT=false && pnpm dev",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "GNO Mock Dev",
			"type": "shell",
			"command": "$env:USE_FOUNDRY_AGENT='false'; pnpm dev",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "GNO Foundry Dev",
			"type": "shell",
			"command": "$env:PROJECT_ENDPOINT='https://Youbiquity.services.ai.azure.com/api/projects/aidan-prototype'; pnpm dev",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}